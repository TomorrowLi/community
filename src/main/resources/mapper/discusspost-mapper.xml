<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tomorrowli.community.community.mapper.DisCussPortMapper">
    <sql id="values">
        user_id, title, content, type, status, create_time, comment_count, score
    </sql>
    <select id="selectAll" resultType="DiscussPost">
        select * from discuss_post where status !=2
        <if test="userId!=0">
            and user_id=#{userId}
        </if>
        order by type desc, create_time desc
    </select>


    <insert id="insertDisCussport" parameterType="DiscussPost" keyProperty="id">
        insert INTO discuss_post(<include refid="values"></include>)
        VALUES(#{userId},#{title},#{content},#{type},#{status},#{createTime},#{commentCount},#{score})
    </insert>

    <select id="selectDiscussDetail" resultType="DiscussPost">
        select * from discuss_post where id=#{discussId}
    </select>
</mapper>